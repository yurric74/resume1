{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
        <main>
            <section>
                <h1>{{> title data="Work history" big=true}}</h1>
                <div>
                    <ul>
                        {{#each works}}
                            <li>
                                <div>{{position}}</div>
                                <br>
                                <div>
                                    {{duration.from}} - 
                                    {{#if duration.to}}
                                        {{duration.to}} 
                                    {{else}} 
                                        (досі працюємо) 
                                    {{/if}}
                                </div>

                                <br>
                                    {{#if company.url}}
                                <b>{{> link text=company.name href=company.url blank=true noLine=true}}</b>
                                    {{else}}
                                    {{company.name}}
                                    {{/if}}
                                <br>
                                <br>

                                <div>
                                    <strong>Projects ({{projectAmount}})</strong>
                                </div>

                                <br>

                                <ul>
                                    {{#each projects}}
                                    <li>
                                        <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                        <div>
                                            <p>{{about}}</p>
                                        </div>

                                        <br>
                                        <div>
                                            <em>"Project stacks"</em>
                                        </div>
                                        <br>
                                        <div>
                                            <ul>
                                        {{#each stacks}}
                                            <li>{{name}}</li>
                                        {{/each}}
                                            </ul>
                                        </div>
                                        <br>
                                        <div>
                                        <em>"Project awards"</em>
                                        </div>
                                        <br>
                                        <br>

                                        <div>
                                            <ul>
                                        {{#each awards}}
                                            <li>{{name}}</li>
                                        {{/each}}
                                            </ul>
                                        </div>
                                    </li>
                                    {{/each}}
                                </ul>
                            </li>
                            <br>
                        {{/each}}
                    </ul>
                </div>
            </section>

        </main>
    {{/with}}
</div>

